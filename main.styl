@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,800&subset=cyrillic');


General_FontFamily = 'Open Sans'
General_FontSize = 14px
TextColor = #999
LinkColor = #333
LinkHoverColor = #cf1569
BodySize = 1200px
BGColor = #fff

*
	padding 0
	margin 0
	
/* общие стили для всего сайта */
html
	font-family General_FontFamily
	font-size General_FontSize

li
	list-style none
h2
	font-size 2.14em
.link__button
	display inline-block
	background-color #333
	color #fff
	text-decoration none
	text-transform uppercase
	padding 10px 20px

/* конец общих стилей для всего сайта*/

.header 
	background-color BGColor
	max-width BodySize
	margin 0 auto
	&__wrap
		display flex
		justify-content space-between
		align-items center
		& div 
			//flex-grow 1
	&__menu
		display flex
		justify-content space-around
		flex-grow 1
		&-link
			color LinkColor
			text-transform uppercase
			text-decoration none			
			&:hover
				color LinkHoverColor
		
	

.image
	&-content
		display block
		margin 0 auto

.choose
	background-image url("images/choosen__bg.png")
	background-position 640px 80px
	background-repeat no-repeat
	padding-top 100px
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		align-items center
	&__image
		width auto
	&__content
		width 50%
		padding-left 40px
		&-head 
			margin-bottom 60px
		&-text 
			margin-bottom 10px

.amoret
	background-image url("images/amoret_bg.jpg")
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		align-items center
		padding-top 40px
		padding-bottom 40px
		
	&__content
		width 50%
		margin-right 30px