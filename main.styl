@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,800&subset=cyrillic');
@import url('css/font-awesome.min.css')
@import url('css/menu.css')
@import url('css/modal.css')

General_FontFamily = 'Open Sans'
General_FontSize = 14px
TextColor = #999
LinkColor = #333
LinkHoverColor = #cf1569
BodySize = 1200px
BGColor = #fff
FooterBGColor = #333
FooLinkColor = #ccc

*
	padding 0
	margin 0
	
/* общие стили для всего сайта */
html
	font-family General_FontFamily
	font-size General_FontSize

li
	list-style none
h2
	font-size 2.14em
.link__button
	display inline-block
	background-color #333
	color #fff
	text-decoration none
	text-transform uppercase
	padding 10px 40px
	transition 1s
	&:hover
		background-color #cf1569
		color #fff
		transition 1s
.link__button-active
	background-color #cf1569
	pointer-events none
	
/* конец общих стилей для всего сайта*/

.header 
	background-color BGColor
	max-width BodySize
	margin 0 auto
	&__wrap
		display flex
		justify-content space-between
		align-items center
	&__logo1-image, &__logo2-image
		width 100%
	&__menu
		display flex
		justify-content space-around
		flex-grow 1
		&-link
			color LinkColor
			text-transform uppercase
			text-decoration none			
			&:hover
				color LinkHoverColor
		
.image
	&-content
		display block
		margin 0 auto
		max-width 1200px
		width 100%

.choose
	background-image url("images/choosen__bg.png")
	background-position 640px 80px
	background-repeat no-repeat
	padding-top 100px
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		align-items center
	&__image
		width auto
	&__content
		width 50%
		padding-left 40px
		&-head 
			margin-bottom 60px
		&-text 
			margin-bottom 10px

.amoret
	background-image url("images/amoret_bg.jpg")
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		align-items center
		padding-top 40px
		padding-bottom 40px
		
	&__content
		width 50%
		margin-right 30px
		&-head
			margin-bottom 60px
		&-text
			margin-bottom 10px
		&-link
			margin-top 20px

.dentelle
	background-image url("images/dentelle_bg.png")
	background-repeat no-repeat
	background-position 640px 80px
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		align-items center
		padding-top 40px
		padding-bottom 40px
	&__content
		width 50%
		margin-left 30px
		&-head
			margin-bottom 60px
		&-text
			margin-bottom 10px
		&-link
			margin-top 20px

.footer
	background-color FooterBGColor
	color FooLinkColor
	&__wrap
		max-width BodySize
		margin 0 auto
		display flex
		justify-content center
		flex-wrap wrap
		padding-top 40px
		padding-bottom 20px
	&__menu
		display flex
		justify-content space-around
		width 50%
		&-link
			color FooLinkColor
			text-decoration none
	&__phone
		width 100%
		font-size 2.14em
		text-align center
		margin-top 60px
		&-text
			color FooLinkColor
			text-decoration none
	&__copy
		width 100%
		font-size 0.85em
		text-align center
		margin-top 40px

.brand
	max-width BodySize
	margin 0 auto
	margin-bottom 60px
	&__header
		text-align center
		&-head
			margin-top 10px
		&-text
			width 50%
			margin 0 auto
			text-align center
			margin-top 5px
	&__menu
		display flex
		width 50%
		justify-content space-between
		margin 0 auto
		margin-top 20px
	&__content
		display flex
		justify-content space-between
		flex-wrap wrap
		margin-top 60px
		&_item
			width 19%
			margin 10px
			padding 10px
			box-shadow 0px 0px 10px 0px #ccc
			&-head
				margin-top 5px
			&-text
				margin-top 10px
				margin-bottom 10px

.offer
	max-width BodySize
	margin 0 auto
	text-align center
	margin-top 60px
	&-head
		margin-bottom 60px
	&__content
		display flex
		justify-content center
		margin-bottom 40px
		&_block
			width 25%
			padding 0 30px
			& > .fa
				color #cf1569
				margin-bottom 15px
			&-head
				font-size 1.28em
				margin-bottom 5px

.application
	max-width BodySize
	margin 50px auto
	overflow hidden
	&-image
		float left
		margin-right 20px
	&-text
		margin-bottom 20px

.develop
	max-width BodySize
	margin 30px auto
	&__item
		overflow hidden
		width 80%
		margin 10px auto
		border-bottom 1px solid #333
		padding-bottom 10px
		&-image
			float left
			margin-right 40px
		&-head
			margin-bottom 40px
		&-text
			margin-bottom 20px
	&__paginav
		text-align center
		margin-top 40px
		&-item
			display inline-block
		&-link
			color #333
			text-decoration none
			padding 4px 6px
			font-size 1.5em
			&:hover
				color #cf1569

.event
	max-width BodySize
	margin 0 auto
	display flex
	justify-content space-between
	margin-top 60px
	&__content:first-child
		margin-right 40px
	&__content
		margin-bottom 60px
		&-head
			font-size 3em
			margin-bottom 20px
		&-text
			padding-bottom 10px
		&-link
			margin-top 40px

.contact
	max-width BodySize
	margin 60px auto
	display flex
	justify-content center
	align-items center
	&__item:first-child
		margin-right 30px
	&__item
		width 30%
		&-block
			margin-bottom 20px
		&-name, &-text
			display table-cell
		&-text
			padding-left 15px
		&-question
			padding-top 10px
			margin-bottom 10px

	
@media screen and (max-width: 1024px)
	.brand__menu
		width 90%
	.brand__content_item-image
		width 100%
	.offer__content_block
		padding 0
	.application
		padding-left 10px
		&-image
			width 30%
		&-text
			width 90%
			margin-bottom 5px

@media screen and (max-width: 768px)
	#pull
		display block
		position relative
		width 200px
		text-align center
		border-bottom 1px solid #333
	#menu
		display none
		position absolute
		top 70px
		left 284px
		flex-wrap wrap
		width 200px
		font-size 2em
		background-color #888
		box-shadow 0px 0px 10px 4px #888
	.header__menu-item
		border 1px solid #fff
		width 100%
		text-align center
	.header__menu-link
		color #fff
	.application-image
		width 50%
	.develop__item-image
		float none
		margin-right 0
	.develop__item-head
		margin-bottom 10px
	.event
		flex-wrap wrap
		padding 0 10px
		&__content
			margin-bottom 20px
			width 100%

@media screen and (max-width: 425px)
	#pull
		font-size 1em
		margin 0 40px
	#menu
		top 50px
		left 115px
		font-size 1.2em
	.choose
		padding-top 30px
	.choose__image, .amoret__image, .dentelle__image
		display none
	.choose__content, .amoret__content, .dentelle__content
		width 90%
		padding-left 0
		margin-right 0
		margin-left 0
	.footer__menu
		width 100%
	.brand__menu
		flex-wrap wrap
		&-item
			margin-bottom 5px
			width 49%
			height 30px
		&-link
			width 100%
			display flex
			height 100%
			align-items center
			justify-content center
			padding 0
	.brand__content_item
		width 40%
	.offer__content
		flex-wrap wrap
		&_block
			width 90%
	.application
		padding 0 5px
		&-image
			width 100%
		&-text
			width 100%
	.event__content:first-child
		margin-right 0
	.event__content-image
			width 100%
	.contact__item:last-child
		display none
	.contact__item
		width 80%
	
@media screen and (max-width: 375px)
	#menu
		top 45px
		left 88px
	.brand__header-text
		width 90%
	.brand__content
		margin-top 10px
		&_item
			margin 5px	

@media screen and (max-width: 320px)
	#menu
		top 40px
		left 60px
	.footer__menu
		flex-wrap wrap
		&-item
			width 100%
			text-align center
	.brand__content_item
		width 90%
	.event__content-link
		padding 20px